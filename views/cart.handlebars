<section class="cart py-5" data-cart-page>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <div>
            <h1 class="h3 fw-semibold mb-1">Your cart</h1>
            <p class="text-muted mb-0">Review your selections before checking out.</p>
          </div>
          <a href="/products" class="btn btn-outline-success btn-sm">Continue shopping</a>
        </div>

        {{#if cartItems.length}}
          <div class="card shadow-sm mb-4">
            <div class="card-body p-0">
              <div class="table-responsive cart-table">
                <table class="table align-middle mb-0">
                  <thead class="table-light">
                    <tr>
                      <th scope="col">Item</th>
                      <th scope="col" class="text-center">Quantity</th>
                      <th scope="col" class="text-end">Price</th>
                      <th scope="col" class="text-end">Total</th>
                    </tr>
                  </thead>
                  <tbody data-cart-list>
                    {{#each cartItems}}
                      <tr>
                        <td>
                          <div class="d-flex align-items-center gap-3">
                            <img src="{{imageURL}}" alt="{{name}}" loading="lazy" />
                            <div>
                              <p class="mb-0 fw-semibold">{{name}}</p>
                              <small class="text-muted text-uppercase">{{category}}</small>
                            </div>
                          </div>
                        </td>
                        <td class="text-center">{{quantity}}</td>
                        <td class="text-end">${{unit_price}}</td>
                        <td class="text-end">${{line_total}}</td>
                      </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <div class="card shadow-sm">
            <div class="card-body d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
              <dl class="mb-0 w-100 w-md-auto">
                <div class="d-flex justify-content-between gap-4">
                  <dt class="text-muted">Subtotal</dt>
                  <dd class="mb-0 fw-medium" data-cart-subtotal>${{cartSummary.subtotal}}</dd>
                </div>
                <div class="d-flex justify-content-between gap-4">
                  <dt class="text-muted">Tax</dt>
                  <dd class="mb-0 fw-medium" data-cart-tax>${{cartSummary.tax}}</dd>
                </div>
                <div class="d-flex justify-content-between gap-4">
                  <dt class="fw-semibold">Grand total</dt>
                  <dd class="mb-0 fw-semibold" data-cart-total>${{cartSummary.total}}</dd>
                </div>
              </dl>
              <button type="button" class="btn btn-success btn-lg">Proceed to checkout</button>
            </div>
          </div>
        {{else}}
          <div class="alert alert-info" role="status" data-cart-empty>
            Your cart is empty. Start browsing the <a href="/products" class="alert-link">GreenUP catalog</a>
            to add your first items.
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</section>
