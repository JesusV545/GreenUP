<section class="section-padding pt-0" data-cart-page>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <div class="section-heading">
          <span class="section-heading__eyebrow">Your basket</span>
          <h2 class="section-heading__title">Review your selections</h2>
          <p class="section-heading__lead">Double-check quantities and totals before you head to checkout.</p>
        </div>

        {{#if cartItems.length}}
          <div class="surface-card p-0 mb-4 cart-table">
            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead>
                  <tr>
                    <th scope="col">Item</th>
                    <th scope="col" class="text-center">Quantity</th>
                    <th scope="col" class="text-end">Price</th>
                    <th scope="col" class="text-end">Total</th>
                  </tr>
                </thead>
                <tbody data-cart-list>
                  {{#each cartItems}}
                    <tr>
                      <td>
                        <div class="d-flex align-items-center gap-3">
                          <img src="{{imageURL}}" alt="{{name}}" loading="lazy" />
                          <div>
                            <p class="mb-0 fw-semibold">{{name}}</p>
                            <small class="text-muted text-uppercase">{{category}}</small>
                          </div>
                        </div>
                      </td>
                      <td class="text-center">{{quantity}}</td>
                      <td class="text-end">${{unit_price}}</td>
                      <td class="text-end">${{line_total}}</td>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>

          <div class="glass-card p-4 p-lg-5 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-4">
            <dl class="cart-summary mb-0 w-100 w-md-auto">
              <div class="cart-summary__row">
                <dt class="text-muted">Subtotal</dt>
                <dd class="mb-0" data-cart-subtotal>${{cartSummary.subtotal}}</dd>
              </div>
              <div class="cart-summary__row">
                <dt class="text-muted">Estimated tax</dt>
                <dd class="mb-0" data-cart-tax>${{cartSummary.tax}}</dd>
              </div>
              <div class="cart-summary__row cart-summary__row--total">
                <dt>Total due</dt>
                <dd class="mb-0" data-cart-total>${{cartSummary.total}}</dd>
              </div>
            </dl>
            <div class="d-grid d-md-inline-flex gap-3">
              <a href="/products" class="btn btn-outline-success">Continue shopping</a>
              <button type="button" class="btn btn-success btn-lg">Proceed to checkout</button>
            </div>
          </div>
        {{else}}
          <div class="empty-state" role="status" data-cart-empty>
            Your cart is empty. Explore the <a href="/products">GreenUP catalog</a> to add your first items.
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</section>
