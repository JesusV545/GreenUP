<section class="vh-100 gradient-custom d-flex align-items-center">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-lg border-0">
          <div class="card-body p-5">
            <h1 class="h3 fw-semibold text-center mb-3 text-success">Create your account</h1>
            <p class="text-muted text-center mb-4">
              Join GreenUP for personalized recommendations and faster checkout.
            </p>
            <div class="alert alert-danger" role="alert" data-alert="standalone-signup"></div>
            <form id="standalone-signup-form" data-standalone-signup novalidate>
              <div class="mb-3">
                <label class="form-label" for="ssu-name">Full name</label>
                <input
                  id="ssu-name"
                  class="form-control"
                  name="name"
                  type="text"
                  autocomplete="name"
                  required
                  minlength="2"
                />
                <div class="invalid-feedback">Please enter your name (2 characters minimum).</div>
              </div>
              <div class="mb-3">
                <label class="form-label" for="ssu-email">Email address</label>
                <input
                  id="ssu-email"
                  class="form-control"
                  name="email"
                  type="email"
                  autocomplete="email"
                  required
                />
                <div class="invalid-feedback">We need a valid email to create your account.</div>
              </div>
              <div class="mb-4">
                <label class="form-label" for="ssu-password">Password</label>
                <input
                  id="ssu-password"
                  class="form-control"
                  name="password"
                  type="password"
                  autocomplete="new-password"
                  required
                  minlength="8"
                />
                <div class="form-text">Use at least 8 characters including upper, lower, and a number.</div>
                <div class="invalid-feedback">Please choose a stronger password.</div>
              </div>
              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success" data-submit>Sign up</button>
                <a class="btn btn-outline-success" href="/">Back to sign in</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script defer src="/js/profile.js"></script>
