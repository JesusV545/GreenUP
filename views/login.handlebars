<main class=" flex h-screen bg-slate-800 justify-center items-center">
  <div class="bg-slate-400 text-start rounded-xl h-1/2 w-1/2">
    <div class="bg-slate-600 text-4xl text-slate-900 rounded-xl h-auto"> <h1 class="ml-4 underline">Login Here</h1></div>
    <form class="" id="login-form">
      <div class="mt-2 ml-4 mr-4">
        <label for="user-login" class="text-rose-900 text-2xl font-bold">Enter UserName: </label>
        <input type="text" class="bg-slate-800 bold h-8 focus:bg-white rounded-xl w-full text-2xl font-bold" id="user-login">
      </div>
      <div class="ml-4 mt-2 mr-4">
        
        <label for="email-login" class="text-rose-800 font-bold text-2xl">email:</label> <br>
        <input class="bg-slate-800 w-full h-8 focus:bg-white rounded-xl text-2xl font-bold" type="text" id="email-login" />
      </div>
      <div class="ml-4 mt-2 mr-4">
        <label for="password-login" class="text-rose-700 font-bold text-2xl">password:</label> <br>
        <input class="bg-slate-800 w-full h-8 focus:bg-white rounded-xl text-2xl font-bold" type="password" id="password-login" /><br>
      </div>
        <button class="bg-rose-900 focus:bg-lime-900 rounded-xl w-4/12 mt-4 text-2xl ml-4" type="submit" id="login">login</button>
        <div class="flex bg-slate-400 mt-4 ml-4">
          <p>Don't Have an Account?</p>
          <button class="bg-sky-900 focus:bg-lime-900 rounded-xl w-4/12 mt-4 text-2xl ml-4" type="submit" id="signUp">Sign Up</button>
        </div>
    </form>
  </div>
</main>