{{!-- Legacy products view upgraded to the unified catalog styling --}}
<section class="catalog section-padding pt-0">
  <div class="container">
    <div class="section-heading text-center text-md-start">
      <span class="section-heading__eyebrow">Seasonal market</span>
      <h2 class="section-heading__title">Shop fresh produce</h2>
      <p class="section-heading__lead">
        Explore peak-season picks, pantry staples, and vibrant greens selected by our sourcing team.
      </p>
    </div>

    {{#if product.length}}
      <div class="product-grid">
        {{#each product}}
          <article class="product-tile surface-card surface-card--hover" tabindex="0">
            <div class="product-tile__media">
              <img
                src="{{#if imageURL}}{{imageURL}}{{else}}{{product_imageURL}}{{/if}}"
                alt="{{#if name}}{{name}}{{else}}{{product_name}}{{/if}}"
                loading="lazy"
              />
            </div>
            <div class="product-tile__body">
              <span class="product-tile__category">{{#if category}}{{category}}{{else}}{{product_category}}{{/if}}</span>
              <h3 class="product-tile__title">
                <span>{{#if name}}{{name}}{{else}}{{product_name}}{{/if}}</span>
              </h3>
              <div class="product-tile__actions">
                <span class="product-tile__price">${{#if price}}{{price}}{{else}}{{product_price}}{{/if}}</span>
                <button
                  type="button"
                  class="btn btn-success btn-sm"
                  data-add-to-cart
                  data-product-id="{{#if id}}{{id}}{{else}}{{product_id}}{{/if}}"
                  data-product-name="{{#if name}}{{name}}{{else}}{{product_name}}{{/if}}"
                  data-product-image="{{#if imageURL}}{{imageURL}}{{else}}{{product_imageURL}}{{/if}}"
                  data-product-price="{{#if price}}{{price}}{{else}}{{product_price}}{{/if}}"
                >
                  Add to cart
                </button>
              </div>
            </div>
          </article>
        {{/each}}
      </div>
    {{else}}
      <div class="empty-state" role="status">
        We&apos;re restocking our catalog. Check back soon for fresh additions!
      </div>
    {{/if}}
  </div>
</section>
<script defer src="/js/cart.js"></script>
