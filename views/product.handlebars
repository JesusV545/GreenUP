<section class="product-detail section-padding pt-0">
  <div class="container">
    <div class="product-detail__wrapper">
      <div class="product-detail__gallery">
        <img src="{{imageURL}}" alt="{{name}}" loading="lazy" />
      </div>
      <div class="product-detail__content">
        <div>
          <span class="product-detail__category">{{category}}</span>
          <h1 class="section-heading__title mt-3 mb-2">{{name}}</h1>
          {{#if description}}
            <p class="text-muted mb-3">{{description}}</p>
          {{/if}}
        </div>
        <div class="product-detail__meta">
          <span class="product-detail__price">${{price}}</span>
          {{#if nutritionFactsURL}}
            <a class="btn btn-outline-success btn-sm" href="{{nutritionFactsURL}}" target="_blank" rel="noopener">
              View nutrition facts
            </a>
          {{/if}}
        </div>
        <div class="product-detail__actions">
          <button
            type="button"
            class="btn btn-success"
            data-add-to-cart
            data-product-id="{{id}}"
            data-product-name="{{name}}"
            data-product-image="{{imageURL}}"
            data-product-price="{{price}}"
          >
            <i class="fas fa-shopping-basket me-2"></i>Add to cart
          </button>
          <a class="btn btn-outline-success" href="/products">Back to shop</a>
        </div>
      </div>
    </div>
  </div>
</section>
