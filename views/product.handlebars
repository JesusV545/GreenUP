<section class="product-detail py-5">
  <div class="container">
    <div class="row gy-4 align-items-start">
      <div class="col-lg-5">
        <img
          class="img-fluid rounded shadow-sm"
          src="{{imageURL}}"
          alt="{{name}}"
          loading="lazy"
        />
      </div>
      <div class="col-lg-7">
        <h1 class="display-6 fw-semibold">{{name}}</h1>
        <p class="text-muted text-uppercase letter-spacing">{{category}}</p>
        <p class="lead fw-bold text-success mb-4">${{price}}</p>
        {{#if description}}
          <p class="text-muted mb-4">{{description}}</p>
        {{/if}}
        <div class="d-flex flex-wrap gap-3">
          <button
            type="button"
            class="btn btn-success"
            data-add-to-cart
            data-product-id="{{id}}"
            data-product-name="{{name}}"
            data-product-image="{{imageURL}}"
            data-product-price="{{price}}"
          >
            <i class="fas fa-shopping-basket me-2"></i>Add to cart
          </button>
          <a class="btn btn-outline-secondary" href="/products">Back to shop</a>
        </div>
      </div>
    </div>
  </div>
</section>
