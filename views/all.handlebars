<section class="catalog py-5">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="h3 fw-semibold mb-1">Shop fresh produce</h2>
        <p class="text-muted mb-0">Browse seasonal favorites and pantry staples.</p>
      </div>
    </div>

    {{#if products.length}}
      <div class="row g-4">
        {{#each products}}
          <div class="col-sm-6 col-lg-4">
            <article class="card h-100 shadow-sm product-card">
              <img
                class="card-img-top"
                src="{{imageURL}}"
                alt="{{name}}"
                loading="lazy"
              />
              <div class="card-body d-flex flex-column gap-2">
                <h3 class="h5 card-title mb-0">
                  <a class="stretched-link text-decoration-none text-dark" href="/products/{{id}}">
                    {{name}}
                  </a>
                </h3>
                <p class="text-muted small text-uppercase mb-1">{{category}}</p>
                <p class="price-tag mb-3">${{price}}</p>
                <button
                  type="button"
                  class="btn btn-success btn-sm mt-auto"
                  data-add-to-cart
                  data-product-id="{{id}}"
                  data-product-name="{{name}}"
                  data-product-image="{{imageURL}}"
                  data-product-price="{{price}}"
                >
                  Add to cart
                </button>
              </div>
            </article>
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="alert alert-info" role="status">
        We&apos;re restocking our catalog. Check back soon for fresh additions!
      </div>
    {{/if}}
  </div>
</section>
