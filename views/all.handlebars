<section class="catalog">
  <div class="container">
    <div class="section-heading text-center text-md-start">
      <span class="section-heading__eyebrow">Seasonal market</span>
      <h2 class="section-heading__title">Shop fresh produce</h2>
      <p class="section-heading__lead">
        Explore peak-season picks, pantry staples, and vibrant greens selected by our sourcing team.
      </p>
    </div>

    {{#if products.length}}
      <div class="product-grid">
        {{#each products}}
          <article class="product-tile" tabindex="0">
            <div class="product-tile__media">
              <img src="{{imageURL}}" alt="{{name}}" loading="lazy" />
            </div>
            <div class="product-tile__body">
              <span class="product-tile__category">{{category}}</span>
              <h3 class="product-tile__title">
                <a class="stretched-link" href="/products/{{id}}">{{name}}</a>
              </h3>
              <p class="text-muted small mb-2">{{description}}</p>
              <div class="product-tile__actions">
                <span class="product-tile__price">${{price}}</span>
                <button
                  type="button"
                  class="btn btn-success btn-sm"
                  data-add-to-cart
                  data-product-id="{{id}}"
                  data-product-name="{{name}}"
                  data-product-image="{{imageURL}}"
                  data-product-price="{{price}}"
                >
                  Add to cart
                </button>
              </div>
            </div>
          </article>
        {{/each}}
      </div>
    {{else}}
      <div class="empty-state" role="status">
        We&apos;re restocking our catalog. Check back soon for fresh additions!
      </div>
    {{/if}}
  </div>
</section>
